{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "Featured_Image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Categories": {
      "type": "enumeration",
      "enum": [
        "Article",
        "Event",
        "Story"
      ],
      "required": true
    },
    "Excerpt": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "Title"
    }
  }
}
